{
  "build": {
    "builder": "nixpacks",
    "config": {
      "phases": {
        "setup": {
          "cmd": "mkdir -p staticfiles"
        },
        "install": "pip install -r requirements.txt",
        "build": "python manage.py collectstatic --noinput",
        "start": "gunicorn real_estate_portal.wsgi --workers 3 --bind 0.0.0.0:$PORT"
      }
    }
  }
}